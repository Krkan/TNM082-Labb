<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context=".ItemListActivity">

    <!--
    This layout is a two-pane layout for the Items
    master/detail flow.
    
    -->

    <fragment android:id="@+id/item_list" android:name="com.example.izmir.labb.ItemListFragment"
        android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
        tools:layout="@android:layout/list_content" />

    <RelativeLayout android:id="@+id/item_detail_container" android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="3" >

        <TextView
            android:layout_width="125dp"
            android:layout_height="71dp"
          android:textSize="28dp"
            android:id="@+id/theTitle"
            android:layout_gravity="left|top"
            android:textStyle="bold"
            android:enabled="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/theDescription"
            android:layout_below="@+id/theTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/theTitle"
            android:layout_alignEnd="@+id/theTitle" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/theRatingBar"
            android:layout_alignBottom="@+id/theDescription"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>

